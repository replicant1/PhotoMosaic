<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/Beige"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <!-- Image to be mosaic'd, with tiles overlayed -->

    <ImageView
        android:id="@+id/tile_size_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Gray"
        android:layout_weight="1"/>

    <!-- Progress bar -->

    <ProgressBar
        android:id="@+id/mosaic_progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="14dp"/>

    <TextView
        android:id="@+id/mosaic_progress_msg"
        android:textAlignment="center"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <Button
        android:id="@+id/tile_size_button"
        android:text="Send to PhotoMosaicService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>